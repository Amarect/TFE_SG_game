<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest_embuscade">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_quit_embuscade"
        android:layout_width="144dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/quit_embuscade"
        android:fontFamily="serif"
        android:text="Retour"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emb_temps_restant"
        tools:visibility="visible" />

    <TextView
        android:gravity="center"
        android:id="@+id/txt_question"
        android:layout_width="400dp"
        android:layout_height="277dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/texture_bois"
        android:fontFamily="@font/offenbacher"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#E3B393"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rep3"
        android:layout_width="362dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rep_embuscade"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rep2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rep2"
        android:layout_width="362dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rep_embuscade"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rep1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rep4"
        android:layout_width="362dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rep_embuscade"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rep3" />

    <ProgressBar
        android:id="@+id/emb_temps_restant"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dp"
        android:layout_height="29dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_question"
        app:layout_constraintStart_toStartOf="@+id/txt_question"
        app:layout_constraintTop_toBottomOf="@+id/txt_question" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rep1"
        android:layout_width="364dp"
        android:layout_height="59dp"
        android:background="@drawable/rep_embuscade"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emb_temps_restant"
        app:layout_constraintVertical_bias="0.205" />

</androidx.constraintlayout.widget.ConstraintLayout>