<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_image_co"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="197dp"
        android:layout_height="79dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/btn_co"
        android:fontFamily="casual"
        android:text="Connexion"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="196dp"
        android:layout_height="78dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_co"
        android:fontFamily="casual"
        android:text="S'inscire"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnexion"
        app:layout_constraintVertical_bias="0.48" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_nom"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:background="@drawable/input_txt_co"
        android:hint="Username"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtinput_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_verif_co"
        app:layout_constraintVertical_bias="0.437" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtinput_password"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:background="@drawable/input_txt_co"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnConnexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_verif_co"
        app:layout_constraintVertical_bias="0.644" />

    <TextView
        android:id="@+id/txt_verif_co"
        android:layout_width="344dp"
        android:layout_height="135dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/offenbacher"
        android:text="Programa Adventures"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>