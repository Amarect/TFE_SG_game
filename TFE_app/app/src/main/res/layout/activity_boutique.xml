<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boutique_activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_bois_clair">

        <ImageView
            android:id="@+id/image_bottle_rapidite"
            android:layout_width="107dp"
            android:layout_height="113dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_boutique"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_bottle_vue"
            app:srcCompat="@drawable/bottle_vitesse" />

        <ImageView
            android:id="@+id/image_bottle_vue"
            android:layout_width="107dp"
            android:layout_height="113dp"
            app:layout_constraintBottom_toTopOf="@+id/image_bottle_embuscade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.791"
            app:layout_constraintStart_toStartOf="@+id/txt_boutique"
            app:layout_constraintTop_toBottomOf="@+id/txt_boutique"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/bottle_vue" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_aventure"
            android:layout_width="106dp"
            android:layout_height="66dp"
            android:background="@drawable/arrow"
            android:text="Start"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bonus_temps"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:background="@drawable/panneau_achat"
            android:text="Potion rapidité         (3PO)"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/image_bottle_rapidite"
            app:layout_constraintStart_toStartOf="@+id/image_bottle_rapidite"
            app:layout_constraintTop_toBottomOf="@+id/image_bottle_rapidite" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bonus_embuscade"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:background="@drawable/panneau_achat"
            android:text="Potion invisibilité         (3PO)"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/image_bottle_embuscade"
            app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintStart_toStartOf="@+id/image_bottle_embuscade"
            app:layout_constraintTop_toBottomOf="@+id/image_bottle_embuscade" />

        <TextView
            android:id="@+id/txt_boutique"
            android:layout_width="283dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/pannel_po"
            android:fontFamily="@font/offenbacher"
            android:gravity="center_vertical"
            android:text="Boutique"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="53sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retour"
            android:layout_width="93dp"
            android:layout_height="51dp"
            android:background="@drawable/arrow_back"
            android:text="retour"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bonus_vue"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:background="@drawable/panneau_achat"
            android:text="Potion lucidité           (2PO)"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/image_bottle_vue"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/image_bottle_vue"
            app:layout_constraintTop_toBottomOf="@+id/image_bottle_vue" />

        <TextView
            android:id="@+id/nbr_bonus_temps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_bonus_temps"
            app:layout_constraintStart_toStartOf="@+id/btn_bonus_temps"
            app:layout_constraintTop_toBottomOf="@+id/btn_bonus_temps" />

        <TextView
            android:id="@+id/nbr_bonus_embuscade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_bonus_embuscade"
            app:layout_constraintStart_toStartOf="@+id/btn_bonus_embuscade"
            app:layout_constraintTop_toBottomOf="@+id/btn_bonus_embuscade" />

        <TextView
            android:id="@+id/nbr_bonus_vue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_bonus_vue"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="@+id/btn_bonus_vue"
            app:layout_constraintTop_toBottomOf="@+id/btn_bonus_vue" />

        <TextView
            android:id="@+id/txt_po_restant"
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:text="Po restant"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nbr_bonus_embuscade"
            app:layout_constraintVertical_bias="0.328" />

        <ImageView
            android:id="@+id/image_bottle_embuscade"
            android:layout_width="152dp"
            android:layout_height="159dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_boutique"
            app:layout_constraintVertical_bias="0.451"
            app:srcCompat="@drawable/bottle_embuscade" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>